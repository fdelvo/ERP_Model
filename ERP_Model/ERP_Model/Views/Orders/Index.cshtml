
@{
    ViewBag.Title = "Index";
}

<div class="content-box" ng-controller="AngularOrdersController">
    <h1>Orders</h1>
    <div class="nav-bar">
        <a class="button" href="/Orders/New">New Order</a>
    </div>
    <table ng-init="OrdersList()">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Creation Date</th>
                <th>Delivery Date</th>
                <th>Order Value</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="o in orders track by p.OrderGuid">
                <td><a href="/Orders/OrderItems/{{o.OrderGuid}}">{{o.OrderGuid}}</a></td>
                <td>{{o.OrderCustomer.Alias}}</td>
                <td>{{o.OrderDate}}</td>
                <td>{{o.OrderDeliveryDate}}</td>
                <td>{{o.OrderValue}}</td>
                <td><a href="/Orders/Edit/{{o.OrderGuid}}">Edit</a></td>
                <td><a href="" ng-click="RemoveOrder(o.OrderGuid)">Delete</a></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th colspan="7">Pagination</th>
            </tr>
        </tfoot>
    </table>
</div>

