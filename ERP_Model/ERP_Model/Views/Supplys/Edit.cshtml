@{
    ViewBag.Title = "Edit";
}

<div class="content-box" ng-controller="AngularSupplysController">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <h1>Edit Supply</h1>
    <form ng-init="SupplyDetails(GetValueAtIndex(5))" ng-submit="EditSupply()">
        <label>Supply:</label>
        <input ng-model="supply.Supply.SupplyGuid" disabled="disabled"/>
        <br/>
        <ul ng-show="error" class="error-ul">
            <li ng-repeat="e in errorMessages">{{e}}</li>
        </ul>
        <br/>
        <input type="submit" value="Save Supply"/>
        <br/>
        <table>
            <thead>
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Supply Quantity</th>
                <th>Total Price</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="oI in supply.SupplyItems track by oI.SupplyItemGuid">
                <td>
                    <a href="/ProductManagement/ProductDetails/{{oI.SupplyItemStockItem.StockItemProduct.ProductGuid}}">{{oI.SupplyItemStockItem.StockItemProduct.ProductName}}</a>
                </td>
                <td data-th="Unit Price">{{oI.SupplyItemStockItem.StockItemProduct.ProductPrice}}</td>
                <td data-th="Quantity">
                    <input ng-model="oI.SupplyQuantity" type="number"/>
                </td>
                <td data-th="Total Price">{{oI.SupplyQuantity * oI.SupplyItemStockItem.StockItemProduct.ProductPrice}}</td>
            </tr>
            </tbody>
        </table>
        <br/>
        <ul ng-show="error" class="error-ul">
            <li ng-repeat="e in errorMessages">{{e}}</li>
        </ul>
        <br/>
        <input type="submit" value="Save Supply"/>
    </form>
</div>