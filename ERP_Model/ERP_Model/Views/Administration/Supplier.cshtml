@{
    ViewBag.Title = "Supplier";
}

<div class="content-box" ng-controller="AngularAdminController" ng-init="SupplierDetails(GetValueAtIndex(5))">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <h1>Supplier Details</h1>
    <div ng-hide="supplier.SupplierDeleted" class="nav-bar">
        <a class="button" href="/Administration/EditSupplier/{{supplier.SupplierGuid}}">Edit</a>
        <a class="button" href="" ng-click="RemoveSupplier(supplier.SupplierGuid)">Delete</a>
    </div>
    <span ng-show="supplier.SupplierDeleted" class="label">Old Supplier</span>
    <table>
        <tr>
            <td>
                <b>Forname:</b>
            </td>
            <td>{{supplier.SupplierForName}}</td>
        </tr>
        <tr>
            <td>
                <b>Lastname:</b>
            </td>
            <td>{{supplier.SupplierLastName}}</td>
        </tr>
        <tr>
            <td>
                <b>Company:</b>
            </td>
            <td>{{supplier.SupplierCompany}}</td>
        </tr>
        <tr>
            <td>
                <b>Address:</b>
            </td>
            <td>
                <ul>
                    <li>Company: {{supplier.SupplierAddress.AddressCompany}}</li>
                    <li>Forename: {{supplier.SupplierAddress.AddressForName}}</li>
                    <li>Lastname: {{supplier.SupplierAddress.AddressLastName}}</li>
                    <li>Street: {{supplier.SupplierAddress.AddressStreet}}</li>
                    <li>Zipcode | City: {{supplier.SupplierAddress.AddressZipCode}} | {{supplier.SupplierAddress.AddressCity}}</li>
                    <li>Country: {{supplier.SupplierAddress.AddressCountry}}</li>
                </ul>
            </td>
        </tr>
    </table>
</div>