
@{
    ViewBag.Title = "Index";
}

<div class="content-box" ng-controller="AngularOrdersController">
    <h1>Delivery Notes</h1>
    <div class="nav-bar">
    </div>
    <table ng-init="DeliveryNotesList()">
        <thead>
            <tr>
                <th>Delivery Note ID</th>
                <th>Order ID</th>
            </tr>
        </thead>
        <tbody>
        <tr ng-repeat="d in deliveryNotes.DataObject track by d.DeliveryGuid">
            <td><a href="/DeliveryNotes/DeliveryNoteItems/{{d.DeliveryGuid}}">{{d.DeliveryGuid}}</a></td>
            <td><a href="/Orders/OrderItems/{{d.DeliveryOrder.OrderGuid}}">{{d.DeliveryOrder.OrderGuid}}</a></td>
        </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5"><a href="" ng-click="Previous(deliveryNotes.CurrentPage, deliveryNotes.PageAmount, DeliveryNotesList)">Previous</a> {{deliveryNotes.CurrentPage+1}} / {{deliveryNotes.PageAmount}} <a href="" ng-click="Next(deliveryNotes.CurrentPage, deliveryNotes.PageAmount, DeliveryNotesList)">Next</a></td>
            </tr>
        </tfoot>
    </table>
</div>



