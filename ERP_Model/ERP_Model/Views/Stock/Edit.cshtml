
@{
    ViewBag.Title = "Edit";
}

<div class="content-box" ng-controller="AngularStocksController" ng-init="StockDetails(GetValueAtIndex(5)); AddressList();">
    <form ng-submit="EditStock()">
        <label>Stock Name:</label>
        <input type="text" ng-model="stock.StockName" />
        <br />
        <label>Stock Address:</label>
        <select ng-model="stock.StockAddress.AddressGuid">
            <option ng-repeat="a in addresses track by a.AddressGuid" value="{{a.AddressGuid}}">{{a.AddressDescription}}</option>
        </select>
        <br />
        <label>Stock Method:</label>
        <input type="text" ng-model="stock.StockMethod" />
        <br/>
        <label></label>
        <input type="submit" value="Save Stock" />
    </form>
</div>

