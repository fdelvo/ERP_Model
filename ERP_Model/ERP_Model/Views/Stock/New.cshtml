
@{
    ViewBag.Title = "New";
}

<div class="content-box" ng-controller="AngularStocksController" ng-init="AddressList();">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <form ng-submit="CreateStock()">
        <label>Stock Name:</label>
        <input type="text" ng-model="newStock.StockName" />
        <br />
        <label>Stock Address:</label>
        <select ng-model="newStock.StockAddress.AddressGuid">
            <option ng-repeat="a in addresses.DataObject track by a.AddressGuid" value="{{a.AddressGuid}}">{{a.AddressDescription}}</option>
        </select>
        <br />
        <label>Stock Method:</label>
        <input type="text" ng-model="newStock.StockMethod" />
        <br/>
        <label></label>
        <input type="submit" value="Create Stock" />
    </form>
</div>

