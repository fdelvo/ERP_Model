@{
    ViewBag.Title = "New";
}

<div class="content-box" ng-controller="AngularStocksController" ng-init="AddressList(0);">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <h1>Create Stock</h1>
    <form ng-submit="CreateStock()">
        <label>Stock Name:</label>
        <input type="text" ng-model="newStock.StockName"/>
        <br/>
        <label>Stock Address:</label>
        <select ng-options="address.AddressDescription for address in addresses.DataObject track by address.AddressGuid" ng-model="newStock.StockAddress"></select>
        <br/>
        <a href="/Administration/NewAddress" target="_blank">Create Address</a>
        <br/>
        <br/>
        <label>Stock Method:</label>
        <input type="text" ng-model="newStock.StockMethod"/>
        <br/>
        <ul ng-show="error" class="error-ul">
            <li ng-repeat="e in errorMessages">{{e}}</li>
        </ul>
        <br/>
        <input type="submit" value="Create Stock"/>
    </form>
</div>