
@{
    ViewBag.Title = "Edit";
}

<div class="content-box" ng-controller="AngularProductsController" ng-init="ProductDetails(GetValueAtIndex(5)); StockList();">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <form ng-submit="EditProduct()">
        <label>Product Name:</label>
        <input type="text" ng-model="product.ProductName" />
        <br />
        <label>Product Description:</label>
        <input type="text" ng-model="product.ProductDescription" />
        <br />
        <label>Product Price:</label>
        <input type="number" ng-model="product.ProductPrice" />
        <br/>
        <label>Stock:</label>
        <select ng-options="stock.StockName for stock in stocks.DataObject track by stock.StockGuid" ng-model="stock"></select>
        <br />
        <label></label>
        <input type="submit" value="Save Product" />
    </form>
</div>

