@{
    ViewBag.Title = "Edit";
}

<div class="content-box" ng-controller="AngularProductsController" ng-init="ProductDetails(GetValueAtIndex(5)); StockList();">
    <a class="back-link" href="javascript: window.history.back();">Back</a>
    <h1>Edit Product</h1>
    <form ng-submit="EditProduct()">
        <label>Product Name:</label>
        <input type="text" ng-model="product.Product.ProductName"/>
        <br/>
        <label>Product Description:</label>
        <input type="text" ng-model="product.Product.ProductDescription"/>
        <br/>
        <label>Product Price:</label>
        <input type="number" ng-model="product.Product.ProductPrice"/>
        <br/>
        <label>Stock:</label>
        <select ng-options="stock.StockName for stock in stocks.DataObject track by stock.StockGuid" ng-model="product.ProductStockItem.StockItemStock"></select>
        <br/>
        <label>Minimum Stock Quantity:</label>
        <input type="number" ng-model="product.ProductStockItem.StockItemMinimumQuantity"/>
        <br/>
        <label>Maximum Stock Quantity:</label>
        <input type="number" ng-model="product.ProductStockItem.StockItemMaximumQuantity"/>
        <br/>
        <ul ng-show="error" class="error-ul">
            <li ng-repeat="e in errorMessages">{{e}}</li>
        </ul>
        <br/>
        <input type="submit" value="Save Product"/>
    </form>
</div>